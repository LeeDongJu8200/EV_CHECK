<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp" >

    <LinearLayout
        android:id="@+id/commu_ccomments_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/commu_ccomments_item"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/cat" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp" >

                <TextView
                    android:id="@+id/commu_ccomments_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="스카이"
                    android:textColor="#212121"/>

                <TextView
                    android:id="@+id/commu_ccomments_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12월10일" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/commu_ccomments_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:text="맞아요 너무 좋아요ㅋ\n막 타고다녀도 기름 거정 안 해도 되고요~"
            android:textColor="#212121" />

    </LinearLayout>
</androidx.cardview.widget.CardView>